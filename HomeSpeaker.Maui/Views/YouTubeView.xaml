<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeSpeaker.Maui.Views.YouTubeView"
             Title="YouTubeView">
    <VerticalStackLayout>
        <Label Text="Search Youtube"/>
        <Entry Text="{Binding SearchTerm}"/>
        <Button Command="{Binding SearchCommand}"/>
        <VerticalStackLayout>
            <CollectionView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border>
                            <VerticalStackLayout>
                                <HorizontalStackLayout>
                                    <Label Text="{Binding Video.Title}"/>
                                    <Label Text="{Binding Video.Author}"/>
                                    <Button Command="{Binding CacheVideoAsyncCommand}"/>
                                </HorizontalStackLayout>
                                <ProgressBar Progress="{Binding ProgressValue}"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>