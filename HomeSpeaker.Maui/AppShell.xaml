<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeSpeaker.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HomeSpeaker.Maui.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="HomeSpeaker.Maui">

    <ShellContent
        Title="Controller"
        ContentTemplate="{DataTemplate local:SpeakerControllerView}"
        Route="Controller" />

    <ShellContent
        Title="Devices"
        ContentTemplate="{DataTemplate local:ManageDevicesView}"
        Route="Devices" />

</Shell>
